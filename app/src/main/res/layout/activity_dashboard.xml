<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:background="@drawable/back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/txtDashboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="D A S H B O A R D"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="100dp"
                android:textSize="30dp"
                android:textStyle="bold" />


        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="4"
            android:layout_gravity="bottom"
            android:columnCount="2"

            android:columnOrderPreserved="false"
            android:alignmentMode="alignMargins">

            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="28dp"
                android:layout_margin="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient2"
                    android:gravity="center"

                    android:padding="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/imglist" />

                    <Button
                        android:id="@+id/btnlist"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:paddingTop="10dp"
                        android:background="@drawable/buttonart"
                        android:gravity="center_horizontal"
                        android:text="LIST"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:textStyle="bold" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="28dp"
                android:layout_margin="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient2"
                    android:gravity="center"
                    android:padding="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/imgdescription"


                        />

                    <Button
                        android:id="@+id/btnupdate"

                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:textSize="10dp"
                        android:paddingTop="10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/buttonart"
                        android:gravity="center_horizontal"
                        android:text="Description"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        />


                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="28dp"
                android:layout_margin="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient2"
                    android:gravity="center"
                    android:padding="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"

                        android:background="@drawable/imgscan" />

                    <Button
                        android:id="@+id/btntxtprnt"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:textSize="10dp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/buttonart"
                        android:gravity="center_horizontal"
                        android:text="ImageToText"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="28dp"
                android:layout_margin="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient2"
                    android:gravity="center"
                    android:padding="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"

                        android:background="@drawable/imgpeople" />

                    <Button
                        android:id="@+id/btnpeople"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:layout_marginTop="5dp"

                        android:layout_gravity="center"
                        android:background="@drawable/buttonart"
                        android:gravity="center_horizontal"
                        android:text="People"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="28dp"
                android:layout_margin="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient2"
                    android:gravity="center"
                    android:padding="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"

                        android:background="@drawable/imgspeech" />

                    <Button
                        android:id="@+id/btntxttospeech"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/buttonart"
                        android:gravity="center_horizontal"
                        android:text="TextToSpeech"
                        android:paddingTop="10dp"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/white" />


                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="28dp"
                android:layout_margin="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient2"
                    android:gravity="center"
                    android:padding="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"

                        android:background="@drawable/speechtotext" />

                    <Button
                        android:id="@+id/btnspeechtotext"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/buttonart"
                        android:gravity="center_horizontal"
                        android:text="SpeechToText"
                        android:textAlignment="center"
                        android:paddingTop="10dp"
                        android:textAllCaps="true"
                        android:textColor="@color/white" />


                </LinearLayout>



            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="28dp"
                android:layout_margin="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient2"
                    android:gravity="center"
                    android:padding="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"

                        android:background="@drawable/camera" />

                    <Button
                        android:id="@+id/btnCameraActivity"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/buttonart"
                        android:gravity="center_horizontal"
                        android:text="Camera"
                        android:paddingTop="10dp"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/white" />


                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="28dp"
                android:layout_margin="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient2"
                    android:gravity="center"
                    android:padding="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"

                        android:background="@drawable/logout" />

                    <Button
                        android:id="@+id/btnlogout"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/buttonart"
                        android:gravity="center_horizontal"
                        android:text="Logout"
                        android:paddingTop="10dp"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/white" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

    </LinearLayout>

</ScrollView>

